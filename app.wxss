/* app.wxss */

view, text, map, image {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

page {
    background-color: #f5f5f5;
    font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', sans-serif;
    font-size: 14px;
    line-height: 1.5;
    color: #333;
    height: 100%;
    box-sizing: border-box;
}

.container {
    padding: 20rpx;
    box-sizing: border-box;
    min-height: 100vh;
}

.card {
    background-color: #fff;
    border-radius: 12rpx;
    padding: 30rpx;
    margin-bottom: 20rpx;
    box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

/* 通用按钮样式 */
.btn {
    display: block;
    margin: 20rpx 0;
    padding: 24rpx;
    text-align: center;
    background-color: #1aad19;
    color: #fff;
    border-radius: 8rpx;
    font-size: 32rpx;
}

.btn:active {
    opacity: 0.8;
}

.btn-secondary {
    background-color: #fff;
    color: #1aad19;
    border: 2rpx solid #1aad19;
}

.loading {
    padding: 40rpx 0;
    text-align: center;
    color: #999;
}

.empty {
    padding: 60rpx 0;
    text-align: center;
    color: #999;
    font-size: 28rpx;
}

.status-badge {
    display: inline-block;
    padding: 6rpx 16rpx;
    border-radius: 16rpx;
    font-size: 24rpx;
    margin-right: 10rpx;
}

.status-free {
    background-color: #e6f7e6;
    color: #1aad19;
}

.status-occupied {
    background-color: #fff0f0;
    color: #e64340;
}

.status-unknown {
    background-color: #f5f5f5;
    color: #999;
}

/* 通用列表项样式 */
.list-item {
    padding: 20rpx;
    background-color: white;
    border-bottom: 1px solid #e0e0e0;
}

/* 标题样式 */
h1 {
    font-size: 20px;
    font-weight: bold;
    margin-bottom: 20rpx;
}

h2 {
    font-size: 18px;
    font-weight: bold;
    margin-bottom: 16rpx;
}

h3 {
    font-size: 16px;
    font-weight: bold;
    margin-bottom: 12rpx;
}