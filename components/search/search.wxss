.search-container {
  display: flex;
  align-items: center;
  padding: 10rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
}

.search-input-wrapper {
  flex: 1;
  background-color: white;
  border-radius: 8rpx;
  margin-right: 10rpx;
}

.search-input {
  width: 100%;
  height: 60rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.search-btn {
  background-color: #1aad19;
  color: white;
  padding: 0 30rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
}