.user-container {
    padding-top: 30rpx;
    min-height: 100vh;
    background-color: #f5f5f5;
    position: relative;
}

.version-tag {
    margin: 10rpx 20rpx;
    font-size: 24rpx;
    color: #999;
    background-color: #fff;
    padding: 8rpx 16rpx;
    border-radius: 20rpx;
    box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.first_line {
    display: flex;
    align-items: center;
    margin: 0 20rpx 20rpx;
}

.first_line .sort-btn {
    margin: 10rpx 0 10rpx auto; 
    font-size: 28rpx;
    color: #1aad19;
    padding: 20rpx;
    background-color: #f0f9ff;
    border-radius: 8rpx;
}

.first_line .station-tip {
    margin: 10rpx auto 10rpx 0; 
    font-size: 28rpx;
    color: #666;
    padding: 20rpx;
    text-align: center;
    border-radius: 10rpx;
}

/* 用户页面内容 */
.user-content {
    padding: 0 20rpx 20rpx;
}

/* 空收藏状态 */
.empty-container {
    text-align: center;
    padding: 100rpx 0;
    background-color: #fff;
    border-radius: 10rpx;
    box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.empty-text {
    font-size: 32rpx;
    color: #666;
    margin-bottom: 20rpx;
}

/* 收藏列表 */
.station-list {
}

/* 加载状态 */
.loading {
    text-align: center;
    padding: 50rpx 0;
    font-size: 28rpx;
    color: #1aad19;
}