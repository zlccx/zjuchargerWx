<view class="detail-container">
  <!-- 地图区域 -->
  <map 
    longitude="{{station.lon}}" 
    latitude="{{station.lat}}" 
    class="map" 
    show-location="true" 
    markers="{{markers}}"
  />

  <!-- 充电桩信息区域 -->
  <view class="station-info">
    <view class="info-header">
      <view class="station-name">{{station.name}}</view>
      <view class="favorite-btn" bindtap="toggleFavorite">
        <text class="favorite-icon">{{isFavorite ? '★' : '☆'}}</text>
        <text class="favorite-text">{{isFavorite ? '已收藏' : '收藏'}}</text>
      </view>
    </view>

    <view class="info-content">
      <view class="info-row">
        <view class="info-item">
          <text class="info-label">运营商：</text>
          <text class="info-value">{{station.provider || '未知'}}</text>
        </view>
      </view>

      <view class="info-row">
        <view class="info-item">
          <text class="info-label">空闲/总数：</text>
          <text class="info-value">{{station.free || 0}}/{{station.total || 0}}</text>
        </view>
      </view>

      <view class="info-row">
        <view class="info-item">
          <text class="info-label">校区：</text>
          <text class="info-value">{{station.campus_name || '未知地址'}}</text>
        </view>
      </view>

      <view class="info-row">
        <view class="info-item">
          <text class="info-label">距离：</text>
          <text class="info-value">{{station.dist}}m</text>
        </view>
      </view>

      <view class="info-row">
        <view class="info-item">
          <text class="info-label">设备ID：</text>
          <text class="info-value">{{station.devid}}</text>
        </view>
      </view>
    </view>
  </view>
</view>